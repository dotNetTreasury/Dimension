<UserControl x:Class="DimensionClient.Library.Controls.ChatMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:viewmodels="clr-namespace:DimensionClient.Models.ViewModels"
             x:Name="UserControlMain" Loaded="UserControlMain_Loaded" Unloaded="UserControlMain_Unloaded">
    <UserControl.DataContext>
        <viewmodels:ChatMainViewModel/>
    </UserControl.DataContext>
    <DockPanel>
        <Border Height="40" BorderBrush="#EBEEF5" BorderThickness="0,0,0,1" DockPanel.Dock="Top">
            <TextBlock x:Name="txbFriendNickName" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="22"/>
        </Border>
        <Grid MinHeight="160" DockPanel.Dock="Bottom">
            <Border Background="#FFFFFF" CornerRadius="4">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#C0C4CC" Opacity="0.2"/>
                </Border.Effect>
            </Border>
            <DockPanel Margin="6">
                <Border BorderBrush="#EBEEF5" BorderThickness="0,1,0,0" Margin="0,6,0,0" DockPanel.Dock="Bottom">
                    <DockPanel Margin="0,6,0,0">
                        <Button x:Name="btnSend" Style="{StaticResource ButtonPrimaryWait}" Height="28" Padding="0" FontSize="14" Content="发送" Click="BtnSend_Click" DockPanel.Dock="Right"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock ToolTip="{DynamicResource SelectEmoji}" Style="{StaticResource TextBlockElement}" Margin="6,0,6,0" FontFamily="{StaticResource MessagesIcon}" FontSize="20" Text="&#xe646;"/>
                            <TextBlock x:Name="txbScreenCapture" ToolTip="{DynamicResource ScreenCapture}" Style="{StaticResource TextBlockElement}" Margin="6,0,6,0" FontFamily="{StaticResource MessagesIcon}" FontSize="20" Text="&#xe641;" MouseLeftButtonUp="TxbScreenCapture_MouseLeftButtonUp" TouchUp="TxbScreenCapture_TouchUp"/>
                            <TextBlock ToolTip="{DynamicResource SendingPictures}" Style="{StaticResource TextBlockElement}" Margin="6,0,6,0" FontFamily="{StaticResource MessagesIcon}" FontSize="20" Text="&#xe6a5;"/>
                            <TextBlock ToolTip="{DynamicResource UploadFiles}" Style="{StaticResource TextBlockElement}" Margin="6,0,6,0" FontFamily="{StaticResource MessagesIcon}" FontSize="20" Text="&#xe6a9;"/>
                            <TextBlock ToolTip="{DynamicResource MessageLogging}" Style="{StaticResource TextBlockElement}" Margin="6,0,6,0" FontFamily="{StaticResource MessagesIcon}" FontSize="20" Text="&#xe6ba;"/>
                        </StackPanel>
                    </DockPanel>
                </Border>
                <RichTextBox x:Name="rtbMessage" Style="{x:Null}" BorderThickness="0" Margin="2,2,2,0" IsDocumentEnabled="True" FontSize="14" DockPanel.Dock="Bottom" DataObject.Pasting="RtbMessage_Pasting" KeyDown="RtbMessage_KeyDown">
                    <RichTextBox.Resources>
                        <Style TargetType="{x:Type Paragraph}">
                            <Setter Property="Margin" Value="0,0,0,5"/>
                        </Style>
                    </RichTextBox.Resources>
                    <RichTextBox.CommandBindings>
                        <CommandBinding Command="EditingCommands.EnterParagraphBreak" CanExecute="CommandBinding_CanExecute"/>
                        <CommandBinding Command="EditingCommands.EnterLineBreak" CanExecute="CommandBinding_CanExecute"/>
                    </RichTextBox.CommandBindings>
                </RichTextBox>
            </DockPanel>
        </Grid>
        <Border x:Name="brdChat" Margin="0,5,0,5"/>
    </DockPanel>
</UserControl>
