<UserControl x:Class="DimensionClient.Library.Controls.EmojiReadOnlyTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf">
    <UserControl.Resources>
        <Style TargetType="{x:Type Paragraph}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
        <Style TargetType="{x:Type Run}">
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </UserControl.Resources>
    <Grid HorizontalAlignment="Center">
        <emoji:TextBlock x:Name="txbContent" FontSize="18" TextWrapping="Wrap" Opacity="0" Text="{Binding ElementName=rtbContent,Path=Text}"/>
        <emoji:RichTextBox x:Name="rtbContent" Width="{Binding ElementName=txbContent,Path=ActualWidth,Converter={StaticResource RichTextBoxWidthConvert}}" BorderThickness="0" IsReadOnly="True" Loaded="RtbContent_Loaded"/>
    </Grid>
</UserControl>
