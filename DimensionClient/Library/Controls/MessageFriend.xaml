<UserControl x:Class="DimensionClient.Library.Controls.MessageFriend"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
             x:Name="UserControlMain" Background="Transparent" Loaded="UserControlMain_Loaded" DataContextChanged="UserControlMain_DataContextChanged">
    <UserControl.RenderTransform>
        <TransformGroup>
            <ScaleTransform x:Name="stfLoaded"/>
            <TranslateTransform x:Name="ttfLoaded"/>
        </TransformGroup>
    </UserControl.RenderTransform>
    <UserControl.RenderTransformOrigin>
        <Point X="0" Y="1"/>
    </UserControl.RenderTransformOrigin>
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="MouseMove">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="txbTime" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
        <EventTrigger RoutedEvent="MouseLeave">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="txbTime" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
    <Border Margin="0,6,0,6">
        <DockPanel Margin="0,0,100,0">
            <Image x:Name="imgHead" Height="40" Width="40" VerticalAlignment="Top" Source="{Binding Converter={StaticResource HeadPortraitConvert}, ConverterParameter=80}" DockPanel.Dock="Left">
                <Image.Clip>
                    <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                </Image.Clip>
            </Image>
            <StackPanel Orientation="Vertical" Margin="8,0,0,0">
                <TextBlock x:Name="txbTime" HorizontalAlignment="Left" Foreground="#9FA1A2" Opacity="0"/>
                <Grid HorizontalAlignment="Left" Margin="0,4,0,0">
                    <Border Background="#FFFFFF" CornerRadius="2,8,8,8">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" Color="#C0C4CC" Opacity="0.2"/>
                        </Border.Effect>
                    </Border>
                    <Grid Margin="8,5,8,5">
                        <emoji:TextBlock x:Name="txbContent" FontSize="16" TextWrapping="Wrap" Visibility="Collapsed"/>
                        <Image x:Name="imgContent" MaxHeight="150" MaxWidth="150" Visibility="Collapsed"/>
                        <MediaElement x:Name="mdiContent" Height="100" LoadedBehavior="Play" MediaEnded="MdiContent_MediaEnded" Visibility="Collapsed"/>
                    </Grid>
                </Grid>
            </StackPanel>
        </DockPanel>
    </Border>
</UserControl>
