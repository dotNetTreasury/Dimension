                                </Grid>
                            </StackPanel>
                        </DockPanel>
                    </Border>
                    <Border Margin="0,6,0,6">
                        <DockPanel Margin="100,0,0,0">
                            <Border Height="40" Width="40" VerticalAlignment="Top" Background="#67C23A" CornerRadius="20" DockPanel.Dock="Right"/>
                            <StackPanel Orientation="Vertical" Margin="0,0,8,0">
                                <TextBlock HorizontalAlignment="Right" Foreground="#9FA1A2" Text="10:20"/>
                                <Grid HorizontalAlignment="Right" Margin="0,4,0,0">
                                    <Border Background="#FFFFFF" CornerRadius="8,2,8,8">
                                        <Border.Effect>
